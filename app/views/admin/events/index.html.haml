%h1 Listing events

%table.table.table-bordered.table-striped
  %tr
    %th Title
    %th Description
    %th Date
    %th Image
    %th &nbsp

  - @events.each do |event|
    %tr
      %td= event.title
      %td= event.description
      %td= format_date(event.date)
      %td= image_tag event.image.thumb.url.to_s if event.image
      %td
        = link_to 'view', admin_event_path(event), :class => 'btn'
        = link_to 'edit', edit_admin_event_path(event), :class => 'btn btn-primary'
        = link_to 'delete', admin_event_path(event), :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger'
%br

= link_to 'New Event', new_admin_event_path
