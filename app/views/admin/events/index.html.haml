%h1 Listing Events

= link_to 'New Event', new_admin_event_path, :class => 'btn-primary btn pull-right'

%br
%br

= paginate @events

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th Title
      %th Description
      %th Date
      %th Image
      %th &nbsp

  %tbody
    - @events.each do |event|
      %tr
        %td= event.title
        %td= event.description
        %td= format_date(event.date)
        %td= image_tag(event.image.thumb.url.to_s)
        %td
          = link_to 'view', admin_event_path(event), :class => 'btn'
          = link_to 'edit', edit_admin_event_path(event), :class => 'btn btn-primary'
          = link_to 'delete', admin_event_path(event), :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger'

= paginate @events
