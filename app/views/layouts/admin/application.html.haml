!!!
%html
  %head
    %title Administrator Area
    = stylesheet_link_tag "admin/application"
    = javascript_include_tag "admin/application"
    = csrf_meta_tag
  %body
    #container(data-pjax-container)
      .navbar
        .navbar-inner
          .container
            = link_to '48 VIP | Admin', admin_root_url, :class => 'brand'
            - if current_user
              %ul.nav.pull-left
                %li.dropdown
                  = link_to "Staff<b class='caret'></b>".html_safe, '#', :class => 'dropdown-toggle', "data-toggle" => "dropdown"
                  %ul.dropdown-menu
                    %li= link_to 'Everyone', admin_accounts_path
                    %li= link_to 'New', new_admin_account_path
                %li
                  = link_to "Notices", admin_notices_path
                %li.dropdown
                  = link_to "Events<b class='caret'></b>".html_safe, '#', :class => 'dropdown-toggle', "data-toggle" => "dropdown"
                  %ul.dropdown-menu
                    %li= link_to 'View all', admin_events_path
                    %li= link_to 'New', new_admin_event_path
                %li.dropdown
                  = link_to "FAQs<b class='caret'></b>".html_safe, '#', :class => 'dropdown-toggle', "data-toggle" => "dropdown"
                  %ul.dropdown-menu
                    %li= link_to 'View all', admin_faqs_path
                    %li= link_to 'New', new_admin_faq_path
              %ul.nav.pull-right
                %li.divider-vertical
                %li.dropdown
                  = link_to "#{current_user.full_name}<b class='caret'></b>".html_safe, '#', :class => 'dropdown-toggle', "data-toggle" => "dropdown"
                  %ul.dropdown-menu
                    %li= link_to 'Account', admin_account_path(current_user)
                    %li.divider
                    %li= link_to 'Log Out', logout_path
      .container
        .flash
          - if flash[:alert]
            .message.error
              %p= flash[:alert]
          - if flash[:notice]
            .message.notice
              %p= flash[:notice]
        .content
          = yield
