.event
  = link_to 'All events', events_path, class: 'button margin-below'
  %br
  = image_tag @event.image.large.url.to_s, class: 'image' if @event.image
  .details
    %span.date
      = @event.date.strftime("%d/%y")
    %h5
      = @event.title
    %p
      = markdown(@event.description)
    = rsvp(@event)
  .clear
